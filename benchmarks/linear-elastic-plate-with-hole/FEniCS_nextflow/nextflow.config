profiles {
  conda {
    process.conda = 'environment.yml' 
  }
}
//No need to specify profile each time
conda.enabled = true // this or use -with-conda in command line

plugins {
  id 'nf-prov'
}

prov {
  enabled = true
  formats {
    legacy {
      file = "provenance.json"
      overwrite = true
    }
  }
}